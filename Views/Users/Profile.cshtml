@model EditUserModel
@{
  ViewBag.Title = "Edit profile";
}

<div class="container p-4">

  <form asp-action="@nameof(UsersController.Profile)" method="post" autocomplete="off" novalidate>
    <fieldset>
      <legend class="text-center">@ViewBag.Title</legend>
      <div class="row g-3">

        <div class="col-12 text-center">
          <avatar for="@Model.User" size="128"/>
        </div>

        <div class="col-12">
          <label asp-for="Name" class="form-label"></label>
          <input asp-for="Name" class="form-control" />
          <span asp-description-for="Name" class="form-text"></span>
        </div>
        <div class="col-12">
          <label asp-for="Title" class="form-label"></label>
          <input asp-for="Title" class="form-control" />
          <span asp-description-for="Title" class="form-text"></span>
        </div>
        <div class="col-12">
          <label asp-for="Email" class="form-label"></label>
          <input asp-for="Email" class="form-control" />
          <span asp-description-for="Email" class="form-text"></span>
        </div>
        <div class="col-12">
          <label asp-for="Phone" class="form-label"></label>
          <input asp-for="Phone" class="form-control" />
          <span asp-description-for="Phone" class="form-text"></span>
        </div>
        <div class="col-12">
          <label asp-for="Username" class="form-label"></label>
          <input asp-for="Username" class="form-control" autocomplete="off" />
          <span asp-description-for="Username" class="form-text"></span>
        </div>
        <div class="col-12">
          <label asp-for="Password" class="form-label"></label>
          <input asp-for="Password" class="form-control" autocomplete="new-password" />
          <span asp-description-for="Password" class="form-text"></span>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Save</button>
          <a asp-action="@nameof(HomeController.Index)" class="btn btn-link">Cancel</a>
        </div>
      </div>
    </fieldset>
  </form>

</div>
